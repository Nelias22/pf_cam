<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/tama"
        android:id="@+id/imgUpload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="328dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="240dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/scrollView2"
        android:scrollbarStyle="insideOverlay"
        style="@android:style/Widget.ScrollView"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintHorizontal_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Subir Foto"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/editText"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/imgUpload"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/imgUpload"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/imgUpload"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinner"
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/editText"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/editText" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Twitter"
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintRight_toRightOf="@+id/spinner"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    android:layout_weight="1" />

                <Button
                    android:text="Facebook"
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_constraintTop_creator="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="@+id/spinner"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>